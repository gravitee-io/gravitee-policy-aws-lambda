{
    "id": "aws-lambda-secret-support",
    "name": "aws-lambda-secret-support",
    "apiVersion": "1.0",
    "definitionVersion": "4.0.0",
    "type": "proxy",
    "analytics": {
        "enabled": false
    },
    "listeners": [
        {
            "type": "http",
            "paths": [
                {
                    "path": "/secret-support"
                }
            ],
            "entrypoints": [
                {
                    "type": "http-proxy"
                }
            ]
        }
    ],
    "endpointGroups": [
        {
            "name": "default",
            "type": "http-proxy",
            "endpoints": [
                {
                    "name": "default",
                    "type": "http-proxy",
                    "weight": 1,
                    "inheritConfiguration": false,
                    "configuration": {
                        "target": "http://localhost:8080/endpoint"
                    }
                }
            ]
        }
    ],
    "flows": [
        {
            "name": "flow-1",
            "enabled": true,
            "selectors": [
                {
                    "type": "http",
                    "path": "/",
                    "pathOperator": "STARTS_WITH"
                }
            ],
            "request": [
                {
                    "name": "AWS Lambda",
                    "description": "",
                    "enabled": true,
                    "policy": "aws-lambda-test-policy",
                    "configuration": {
                        "scope": "REQUEST",
                        "region": "us-east-1",
                        "accessKey": "{#secrets.get('/vault/secret/aws:accessKey')}",
                        "secretKey": "{#secrets.get('/vault/secret/aws:secretKey')}",
                        "roleArn": "{#secrets.get('/vault/secret/aws:roleArn')}",
                        "function": "lambda-example",
                        "payload": "{ \"key\": \"value\" }",
                        "invocationType": "RequestResponse",
                        "roleSessionName": "gravitee",
                        "logType": "None",
                        "variables": [
                            {
                                "name": "lambdaResponse",
                                "value": "{#jsonPath(#lambdaResponse.content, '$')}"
                            }
                        ],
                        "sendToConsumer": false,
                        "endpoint": "http://localhost:9999"
                    }
                }
            ],
            "response": [
                {
                    "name": "Copy Aws Lambda Attribute",
                    "description": "",
                    "enabled": true,
                    "policy": "copy-aws-lambda-attribute",
                    "configuration": {}
                }
            ],
            "subscribe": [],
            "publish": []
        }
    ]
}
